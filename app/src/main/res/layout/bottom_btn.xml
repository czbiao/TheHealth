<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/community_btn"
            android:text="社区"
            android:layout_marginLeft="-8dp"
            android:background="@null"
            android:drawableTop="@drawable/a1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:textColor="@android:color/black"
            android:textStyle="normal|bold"/>

        <Button
            android:id="@+id/nutrition_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/a2"
            android:background="@null"
            android:layout_marginLeft="-8dp"
            android:text="营养"
            android:layout_weight="0.2"
            android:textColor="@android:color/black"
            android:textStyle="normal|bold"/>

        <Button
            android:id="@+id/consult_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/a3"
            android:background="@null"
            android:layout_marginLeft="-8dp"
            android:text="咨询"
            android:layout_weight="0.2"
            android:textColor="@android:color/black"
            android:textStyle="normal|bold"/>

        <Button
            android:id="@+id/mould_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_marginLeft="-8dp"
            android:drawableTop="@drawable/a4"
            android:text="塑形"
            android:layout_weight="0.2"
            android:textColor="@android:color/black"
            android:textStyle="normal|bold"/>

        <Button
            android:id="@+id/user_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/a5"
            android:background="@null"
            android:layout_marginLeft="-8dp"
            android:text="我"
            android:layout_weight="0.2"
            android:textColor="@android:color/black"
            android:textStyle="normal|bold"/>
    </LinearLayout>

</RelativeLayout>